{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "paths": {
      "*": ["./node_modules/*"],
      "@/*": ["./*"],
      "@/hooks": ["./*"]
    },
    "types": ["react", "react-native", "react-native-webview"],
    "module": "esnext",
    "target": "es2017"
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
